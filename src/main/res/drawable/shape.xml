<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:topRightRadius="50dp"
                        android:topLeftRadius="50dp"/>
                    <gradient
                        android:angle="45"
                        android:startColor="#8000FFE6"
                        android:endColor="#8000FFE6"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp">
                <shape>
                    <corners android:topRightRadius="50dp"
                        android:topLeftRadius="50dp"/>
                    <gradient
                        android:angle="45"
                        android:centerColor="#000065"
                        android:startColor="#A600FFE6"
                        android:endColor="#A600FFE6"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners android:topRightRadius="50dp"
                        android:topLeftRadius="50dp"/>
                    <gradient
                        android:angle="90"
                        android:centerX="50%"
                        android:centerColor="#0029FAE5"
                        android:startColor="#803ECFFA"
                        android:endColor="#803ECFFA"
                        android:type="linear"
                        />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <size
                        android:width="500dp"
                        android:height="500dp"
                        />
                    <stroke
                        android:width="3dp"
                        android:color="#00FFE6"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
